<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:wt="ns.bookshop.control"
    xmlns:form="sap.ui.layout.form">
	<ResponsivePopover
		id="myPopover"
        title="{JSONModel>/currentBookTitle} price convertation"
		class="sapUiResponsiveContentPadding"
        placement="HorizontalPreferredRight">
        <content>
            <HBox 
                alignItems="Center">
                <Label 
                    vAlign="Middle"
                    design="Bold"
                    text="Price in BYN"/>
                <Text 
                    class="sapUiTinyMarginBeginEnd"
                    text="{JSONModel>/currentBookPriceBYN} BYN"/>
            </HBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>