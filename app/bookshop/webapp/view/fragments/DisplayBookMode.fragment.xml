<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <HBox>
        <VBox>

        </VBox>
        <Label
                text="{i18n>bookPriceLabel}"
                labelFor="bookPrice" />
            <Text
                text="{price} {currency}"
                id="bookPrice"
                visible="{= !${objectView>/edit}}" />

            <Label
                text="{i18n>bookRatingLabel}"
                labelFor="bookRating"
                vAlign="Middle"/>
            <RatingIndicator
                id="bookRating"
                maxValue="5"
                value="{rating}"
                editable="false"
                visible="{= !${objectView>/edit}}" />
    </HBox>
            
  

</core:FragmentDefinition>